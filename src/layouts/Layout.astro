---
import PostHog from "../components/posthog.astro";
import { LinkButton } from "@/components/link-button";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" href="/favicon.ico" />
    <meta name="generator" content={Astro.generator} />
    <title>Farooq Azam Khan</title>
    <PostHog />
  </head>
  <body class="bg-gray-50 text-gray-800">
    <nav
      class="w-full bg-background border-2 border-border shadow-shadow py-4 px-6 fixed top-0 z-50"
    >
      <div class="max-w-7xl mx-auto flex items-center justify-between">
        <a
          href="/"
          class="inline-flex items-center justify-center rounded-base text-sm font-base ring-offset-background transition-all gap-2 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-black focus-visible:ring-offset-2 text-button-foreground bg-button border-2 border-border shadow-shadow hover:translate-x-boxShadowX hover:translate-y-boxShadowY hover:shadow-none h-9 px-3"
        >
          Farooq Khan
        </a>
        <div class="space-x-1 space-y-1 md:space-y-0 md:space-x-3">
          <a
            href="/"
            class="inline-flex items-center justify-center rounded-base text-sm font-base ring-offset-background transition-all gap-2 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-black focus-visible:ring-offset-2 text-button-foreground bg-button border-2 border-border shadow-shadow hover:translate-x-boxShadowX hover:translate-y-boxShadowY hover:shadow-none h-9 px-3"
          >
            Home
          </a>
          <a
            href="/gallery"
            class="inline-flex items-center justify-center rounded-base text-sm font-base ring-offset-background transition-all gap-2 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-black focus-visible:ring-offset-2 text-button-foreground bg-button border-2 border-border shadow-shadow hover:translate-x-boxShadowX hover:translate-y-boxShadowY hover:shadow-none h-9 px-3"
          >
            Gallery
          </a>
          <LinkButton variant="neutral" size="sm" href="https://github.com/farooq-azam-khan/" target="_blank" rel="noopener">
            GitHub
          </LinkButton>
          <LinkButton variant="neutral" size="sm" href="https://www.linkedin.com/in/farooq-khan-46167bb5/" target="_blank" rel="noopener">
            LinkedIn
          </LinkButton>
        </div>
      </div>
    </nav>
    <!-- Main content with top padding to avoid nav overlay -->
    <main class="pt-20">
      <slot />
    </main>
  </body>
</html>
