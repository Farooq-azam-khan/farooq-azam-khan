---
import Layout from "../layouts/Layout.astro";
import GithubIcon from "../components/GithubIcon.astro";
import "@/styles/globals.css";
import {
  Card,
  CardContent,
  CardDescription,
  CardFooter,
  CardHeader,
  CardTitle,
} from "@/components/ui/card";
import {
  CornerDownLeft,
  CornerDownRight,
  MoveDown,
  Plus,
  Link,
  MoveRight,
} from "lucide-react";
import { BlogSectionCarousel } from "@/components/BlogSection.tsx";
import { gsap } from "gsap";
---

<Layout>
  <script
    is:inline
    src="https://cdn.jsdelivr.net/npm/gsap@3.12.5/dist/gsap.min.js"></script>

  <script
    is:inline
    src="https://cdn.jsdelivr.net/npm/gsap@3.12.5/dist/ScrollTrigger.min.js"
  ></script>

  <main class="overflow-hidden dark bg-background text-foreground pb-64">
    <section class="min-h-screen flex items-center justify-start w-full">
      <div class="w-full">
        <h2
          id="fak"
          class="text-indigo-400 text-3xl font-mono
            sm:text-7xl  "
        >
          farooq khan
        </h2>
        <!-- <div class="col-span-1 flex gap-x-3 items-center justify-end">
          <a target="_blank" href="https://github.com/Farooq-azam-khan">
            <GithubIcon className="w-10 h-10" />
          </a>
          <a
            target="_blank"
            href="https://www.linkedin.com/in/farooq-khan-46167bb5/"
          >
            <img
              alt="linkedin logo"
              class="w-5 h-5"
              src="/linkedin-white.png"
            />
          </a>
        </div> -->
        <h1
          id="mle"
          class="text-stone-100 bg-indigo-800/10 sm:w-full tracking-wide text-3xl text-stone-200 font-bold
                 sm:leading-[7rem] sm:text-[9rem] sm:font-bold
                 md:leading-[9rem] md:text-[11rem]
                 lg:text-[13rem] lg:leading-[10rem] lg:mt-3"
        >
        Machine <br class="hidden sm:block"/> 
       Learning
        <br class="hidden sm:block"/> Engineer
        </h1>
      </div>
    </section>
    <script>
      window.addEventListener("load", () => {
        gsap.registerPlugin(ScrollTrigger);
        const herotimeline = gsap.timeline({});
      });
    </script>

    <section class="min-h-screen flex items-center justify-center">
      <div id="section-1" class="space-y-10 lg:max-w-4xl text-center">
        <div class="font-serif text-6xl md:text-8xl">
          <div>MLE specializing in</div>
          <div>
            <span class="text-indigo-700">delivering scalable</span> AI solutions<span
              class="text-indigo-900">.</span
            >
          </div>
        </div>
        <p class="font-mono lg:mt-4 md:text-3xl lg:text-4xl md:block">
          with <span class="text-indigo-500">VLLMs</span>,
          <span class="text-indigo-500">Ollama</span>, and <span
            class="text-green-600">NVIDIA TensorRT</span
          >
          {" "} for optimized model serving pipelines.
        </p>
      </div>
    </section>
    <script>
      window.addEventListener("load", () => {
        gsap.registerPlugin(ScrollTrigger);
        const timeline0 = gsap.timeline({
          scrollTrigger: {
            trigger: "#section-1",
            start: "top bottom",
            end: "bottom center",
            scrub: 1,
            //markers: true,
          },
        });

        timeline0.fromTo(
          "#section-1",
          {
            opacity: 0,
          },
          {
            opacity: 1,
            duration: 1,
          },
        );
      });
    </script>
    <section  class="min-h-screen flex items-center justify-start"
        id="fe-section">
      <div>
        <div
          class="font-mono text-3xl w-full h-full grid gap-y-5 grid-rows-4 grid-cols-5"
        >
          <p
            data-fs-row-1
            class="flex items-center justify-center row-start-1 col-span-5 font-serif text-3xl sm:text-6xl"
          >
           interested in 
          </p>
          <div
            data-fs-row-2
            class="row-start-2 text-5xl sm:text-9xl col-span-1 flex items-center justify-center"
          >
            (
          </div>
          <div
            data-fs-row-2
            class="row-start-2 flex items-center justify-center text-center text-2xl sm:text-4xl col-span-1 text-indigo-500"
          >
            graph algorithms
          </div>
          <div
            data-fs-row-2
            class="row-start-2 col-span-1 flex items-center justify-center"
          >
            <Plus className="w-10 h-10 sm:w-16 sm:h-16" />
          </div>
          <div
            data-fs-row-2
            class="text-2xl sm:text-4xl row-start-2 col-span-1 text-indigo-500 flex items-center justify-center text-center"
          >
            reinforcement learning algorithms
          </div>
          <div
            data-fs-row-2
            class="row-start-2 text-6xl sm:text-9xl col-span-1 flex items-center justify-center"
          >
            )
          </div>
          <div
            data-fs-row-3
            class="flex items-center justify-center row-start-3 col-start-3 col-span-1"
          >
            <MoveDown className="w-16 h-16" />
          </div>
          <div
            data-fs-row-4
            class="row-start-4 text-4xl sm:text-7xl col-span-5 flex items-center justify-center"
          >
            Enhanced LLM Agents
          </div>
        </div>
      </div>
    </section>
    <script>
      window.addEventListener("load", () => {
        const t1 = gsap.timeline({
          scrollTrigger: {
            trigger: "#fe-section",
            pin: true,
            start: "top top",
            end: "bottom center",
            scrub: 1,
            //markers: true,
          },
        });
        // t1.fromTo(
        //   "[data-fs-row-1]",
        //   {
        //     opacity: "0",
        //   },
        //   {
        //     opacity: "100%",
        //   },
        // );
        t1.fromTo(
          "[data-fs-row-2]",
          {
            opacity: "0",
          },
          {
            opacity: "100%",
          },
        );
        t1.fromTo(
          "[data-fs-row-3]",
          {
            opacity: "0",
          },
          {
            opacity: "100%",
          },
        );
        t1.fromTo(
          "[data-fs-row-4]",
          { opacity: "0" },
          {
            opacity: "100%",
            duration: 1,
          },
        );
      });
    </script>

    <section class="min-h-screen flex items-center justify-center">
      <div id="bridge-section" class=" lg:max-w-4xl text-center">
          
        <p
          class="font-serif text-4xl sm:text-6xl lg:text-7xl"
        >
          Bridging best parts of theory and practice to create impactful,
          intelligent systems<span class="text-indigo-800">.</span>
        </p>
      </div>
    </section>
    <script>
      window.addEventListener("load", () => {
        gsap.registerPlugin(ScrollTrigger);
        const bridgetimeline = gsap.timeline({
          scrollTrigger: {
            trigger: "#bridge-section",
            start: "bottom center",
            end: "bottom top",
            scrub: 1,
            // markers: true,
          },
        });

        bridgetimeline.fromTo(
          "#bridge-section",
          {
            opacity: 0,
          },
          {
            opacity: 1,
          },
        );
      });
    </script>

    <section class="">
   
      <h2
        class="px-5 md:px-0 text-center text-foreground text-4xl font-semibold tracking-wide lg:mx-auto lg:max-w-3xl"
      >
        Blog Highlights
      </h2>
      <div class="mt-5 space-y-14">
        <BlogSectionCarousel client:load />
      </div>
    </section>
    <section class="mt-64 font-mono px-5 md:px-0 md:mx-auto md:max-w-6xl">
      <h2
        class="text-center text-foreground text-4xl font-semibold tracking-wide"
      >
        Personal AI Projects
      </h2>
      <ol
        class="px-5 xl:px-0 mt-5 grid sm:gap-x-2 gap-y-4 lg:gap-x-10 grid-cols-2"
      >
        <Card className="col-span-2">
          <CardHeader>
            <CardTitle>Race Car RL Agent</CardTitle>
            <CardDescription>Using Deep Q Learning to create a self driving car.</CardDescription>
          </CardHeader>
          <CardContent>
              <a target="blank_" 
                 href="https://github.com/Farooq-azam-khan/unpublished-papers/blob/main/deep-q-learning.pdf" 
                 class="inline-flex items-center px-3 py-2 text-sm font-medium text-center text-white bg-indigo-700 rounded-lg hover:bg-indigo-800 focus:ring-4 focus:outline-none focus:ring-blue-300 dark:bg-indigo-600 dark:hover:bg-indigo-700 dark:focus:ring-indgio-800">
                  Read the Paper
              </a>

          </CardContent>
                    
        </Card>
        <Card className="col-span-2 sm:col-span-1">
          <CardHeader>
            <CardTitle>Garbage Classification with CNN </CardTitle>
            <CardDescription>
              Efficient Net finetuned on Classifying different types of Garbage.
            </CardDescription>
          </CardHeader>
          <CardContent>
                
          </CardContent>
          <CardFooter className="flex justify-between items-center">
       <a target="blank_" 
                 href="https://github.com/Farooq-azam-khan/unpublished-papers/blob/main/deep-q-learning.pdf" 
                 class="inline-flex items-center px-3 py-2 text-sm font-medium text-center text-white bg-indigo-700 rounded-lg hover:bg-indigo-800 focus:ring-4 focus:outline-none focus:ring-blue-300 dark:bg-indigo-600 dark:hover:bg-indigo-700 dark:focus:ring-indgio-800">
                 Read the Paper
              </a>
            <a
              href="https://github.com/Farooq-azam-khan/cps803-course-project"
              target="blank_"
              class="rounded-lg"><GithubIcon /></a
          >
 
          </CardFooter
          >
        </Card>
        <Card className="col-span-2 sm:col-span-1">
          <CardHeader>
            <CardTitle> Haiku Generator</CardTitle>
            <CardDescription
              >Prompt engineering experimentation to generate Haikus with LLMs.</CardDescription
            >
          </CardHeader>
          <CardContent />
          <CardFooter
            ><a
              href="https://github.com/Farooq-azam-khan/haiku/"
              target="blank_"
              class="rounded-lg"><GithubIcon /></a
            ></CardFooter
          >
        </Card>
        <!-- </div> -->
      </ol>
      <!-- </section> -->

      <section class="mt-32 font-mono">
        <h2
          class="text-center text-foreground text-4xl font-semibold tracking-wide"
        >
          Additional Projects
        </h2>
        <ol class="mt-5 px-5 grid gap-y-4 sm:gap-x-3 md:gap-x-10 grid-cols-3">
          <Card className="col-span-3 sm:col-span-2">
            <CardHeader>
              <CardTitle> D3Js Reference Tutorial </CardTitle>
              <CardDescription>
                Web app to reference D3 library and its many features.</CardDescription
              >
            </CardHeader>
            <CardContent />
            <CardFooter className="space-x-3">
              <a
                href="https://github.com/Farooq-azam-khan/d3js-tutorials"
                target="blank_"><GithubIcon /></a
              ><a
                target="blank_"
                href="https://farooq-azam-khan.github.io/d3js-tutorials/"
              >
                <Link /></a
              ></CardFooter
            >
          </Card>
          <Card className="col-span-3 sm:col-span-1">
            <CardHeader>
              <CardTitle>Chat App</CardTitle>
              <CardDescription>
                A Chat application built to explore web socket connections and
                server client relations with the protocol. App built with elm,
                expressjs, and websockets.
              </CardDescription>
            </CardHeader>
            <CardContent />
            <CardFooter
              ><a
                href="https://github.com/Farooq-azam-khan/chat-app-elm"
                target="blank_"
                class="rounded-lg"><GithubIcon /></a
              ></CardFooter
            >
          </Card>
          <Card className="col-span-3 sm:col-span-1">
            <CardHeader>
              <CardTitle> Twitch Python Discord Bot </CardTitle>
              <CardDescription>Discord bot built with Python.</CardDescription>
            </CardHeader>
            <CardContent />
            <CardFooter
              ><a
                href="https://github.com/Farooq-azam-khan/twitch-api-discord-bot"
                target="blank_"
                class="rounded-lg"><GithubIcon /></a
              ></CardFooter
            >
          </Card>
          <Card className="col-span-3 sm:col-span-2">
            <CardHeader>
              <CardTitle> Rust Tauri App </CardTitle>
              <CardDescription>
                Experimental app designed to test the features offered by Tauri
                library.</CardDescription
              >
            </CardHeader>
            <CardContent />
            <CardFooter
              ><a
                href="https://github.com/Farooq-azam-khan/color-picker-tauri-test-project"
                target="blank_"
                class="rounded-lg"><GithubIcon /></a
              ></CardFooter
            >
          </Card>
        </ol>
      </section>
    </section>
    <section class="mt-32">
      <h2
        class="font-serif text-center text-foreground text-4xl font-semibold tracking-wide"
      >
        2025 VISON
      </h2>
      <ul class="mt-5 space-y-14 px-5 lg:max-w-6xl lg:mx-auto">
        <Card className="">
          <CardHeader><CardTitle>Books</CardTitle></CardHeader><CardContent>
            <ul class="font-serif">
              <li>
                <a href="https://www.deeplearningbook.org/"
                  >Deep Learning (Ian Goodfellow, Yoshua Bengio, and Aaron
                  Courville)</a
                >
              </li>
              <li>
                <a href="http://incompleteideas.net/book/the-book-2nd.html"
                  >Reinforcement Learning: An Introduction (Andrew Barto and
                  Richard S. Sutton)</a
                >
              </li>
              <li>
                <a
                  href="https://bartoszmilewski.com/2014/10/28/category-theory-for-programmers-the-preface/"
                  >Category Theory for Programmers (Bartosz Milewski)</a
                >
              </li>
            </ul></CardContent
          ><CardFooter
            ><a
              class="inline-flex items-center px-3 py-2 text-sm font-medium text-center text-white bg-stone-700 rounded-lg hover:bg-stone-800 focus:ring-4 focus:outline-none focus:ring-stone-300 dark:bg-stone-600 dark:hover:bg-stone-700 dark:focus:ring-stone-800"
              href="https://www.goodreads.com/user/show/133899873-farooq"
              target="blank_">Goodreads for other stuff<MoveRight /></a
            >
          </CardFooter></Card
        >
        <Card className="font-mono">
          <CardHeader>
            <CardTitle> Software Engineering </CardTitle>
          </CardHeader>
          <CardContent>
            <div>
              {"{"} Go, Rust, Python {"}"}
